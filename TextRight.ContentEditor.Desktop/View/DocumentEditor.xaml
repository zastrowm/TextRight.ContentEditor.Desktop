<UserControl x:Class="TextRight.ContentEditor.Desktop.View.DocumentEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextRight.ContentEditor.Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Canvas x:Name="Positioning">
    <FlowDocumentScrollViewer x:Name="Viewer" Canvas.Left="0" Canvas.Top="0" Panel.ZIndex="0" >
      <FlowDocument x:Name="PrimaryDocument">
        <Paragraph TextAlignment="Left">
          <Run>This is some text</Run>
        </Paragraph>
      </FlowDocument>
    </FlowDocumentScrollViewer>
    <Rectangle x:Name="CursorPosition" Height="20" Width="1" Panel.ZIndex="10" Fill="Black" />
  </Canvas>
</UserControl>
